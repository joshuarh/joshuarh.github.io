@require _pygments

// generic {{{

body
  font-family sans-serif
  font-size 1.4rem
  line-height 2rem
  margin 0 auto
  max-width 900px
  position relative

h1, h2, h3, h4, h5, h6
  line-height 1.4em

ol, ul
  padding-left 25px

li
  margin-top 5px
  margin-bottom 20px
  overflow visible

li:last-of-type
  margin-bottom 0

a
  outline none
  padding 5px 0
  text-decoration none
  transition 0.2s ease background-color

footer
  margin 0 auto 25px
  max-width 900px
  font-size 1.2rem

  ul
    margin 0
    padding 0
    text-align center

// }}} generic

// dynamic layout {{{

@media (min-width: 900px)
  footer ul
    column-count 2
    column-gap 30px

  //FIXME enable when you write more posts

  // #posts
  //   column-count 3
  //   column-gap 30px

  body
    padding 0 25px

@media (max-width: 900px)
  footer ul
    column-count 2
    column-gap 30px

  //FIXME enable when you write more posts

  // #posts
  //   column-count 2
  //   column-gap 30px

  body
    padding 0 20px

@media (max-width: 700px)
  footer ul
    column-count 1
    column-gap 30px

  //FIXME enable when you write more posts

  // #posts
  //   column-count 1
  //   column-gap 30px

  body
    padding 0 10px

  // don't indent lists quite as much for very small screens
  ol, ul
    padding-left 20px

// }}} dynamic layout

// this class is added by javascript so the background color isn't
// transitioned on page load (the background color might be changed on page
// load and that shouldn't be transitioned)
.transition-background-color
  transition 0.2s ease background-color

#posts-header
  margin 15px auto 30px
  font-size 2rem

#posts
  margin-bottom 30px
  padding 0

#posts, footer ul
  column-rule 1px dotted
  list-style none

#content
  margin-bottom 15px

  li
    margin-bottom 10px

code, .org-src-container
  font-family monospace

.anchor-link
  opacity 0.2
  padding 5px
  transition 0.2s ease opacity

  &:hover
    opacity 1

.license
  font-size 1.2rem

.back-to-home
  display inline-block

.menu-visible ~ .menu-item
  display block

#menu-toggle
  display block

.menu-item
  display none
  float right
  cursor pointer
  padding 5px
  margin 0 3px

.date
  display block

.date, .post-download-link
  font-size 1.1rem

.highlight
  overflow-x auto

iframe[id^=asciicast-iframe]
  margin 0 auto !important

.post-download-link
  display none
  margin-right 10px

.show-download-links
  .post-download-link
    display inline-block

// solarized colorscheme {{{

@media not print
  @import _colors

  // generic colors (these shouldn't need to change)
  #posts
    li a
      color orange

    li:nth-child(odd) a
      color yellow

  #content a
    color magenta

  .date
    color cyan

  footer
    li
      color blue

    li:nth-child(odd)
      color violet

    li a
      color green

    li:nth-child(odd) a
      color orange

  // solarized light (the default)
  body
    background-color base3
    color base00

    .menu-item:hover
    .menu-item:active
    .menu-item:focus
    a:hover
    a:active
    a:focus
      background-color base2

    h1, .menu-item
      color base01

    ul
      column-rule-color base01

  // overrides from the above colors when using the dark variant
  body.dark
    background-color base03
    color base0

    .menu-item:hover
    .menu-item:active
    .menu-item:focus
    a:hover
    a:active
    a:focus
      background-color base02

    h1, .menu-item
      color base1

    ul
      column-rule-color base1

@media not screen
  a
    text-decoration underline

  .menu-item
    display none

// }}} solarized colorscheme
